<%= form_for("/update", method: "put") do%>
    <%= label_tag(:current_password, "Current Password:") %>
    <%= password_field_tag(:current_password) %>

    <%= label_tag(:new_password, "New Password:") %>
    <%= password_field_tag(:new_password) %>

    <%= label_tag(:confirm_new_password, "Confirm New Password:") %>
    <%= password_field_tag(:confirm_new_password) %>

    <%= submit_tag("Change Password") %>
<% end %>